{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GitHub Actions Workflow",
  "description": "Validates AION-BRAIN GitHub Actions workflow files",
  "type": "object",
  "required": ["name", "on", "jobs"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Workflow name displayed in GitHub UI"
    },
    "on": {
      "type": ["object", "string", "array"],
      "description": "Workflow trigger events"
    },
    "jobs": {
      "type": "object",
      "minProperties": 1,
      "description": "Workflow jobs to execute"
    }
  }
}