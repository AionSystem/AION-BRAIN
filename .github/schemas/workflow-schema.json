{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GitHub Actions Workflow Validation",
  "description": "Validates all GitHub Actions workflow files",
  "type": "object",
  "required": ["name", "on", "jobs"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Workflow name (displayed in GitHub UI)"
    },
    "on": {
      "type": ["object", "string", "array"],
      "description": "Workflow trigger events"
    },
    "jobs": {
      "type": "object",
      "minProperties": 1,
      "description": "Workflow jobs",
      "patternProperties": {
        "^[a-zA-Z_][a-zA-Z0-9_-]*$": {
          "type": "object",
          "required": ["runs-on"],
          "properties": {
            "runs-on": {
              "type": ["string", "array"],
              "description": "Runner specification"
            },
            "steps": {
              "type": "array",
              "minItems": 1,
              "description": "Job steps"
            }
          }
        }
      }
    }
  }
}
